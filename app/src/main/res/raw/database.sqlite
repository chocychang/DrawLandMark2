INSERT INTO `questions` (`question`, `correct_answer`, `wrong_answer_1`, `wrong_answer_2`, `wrong_answer_3`, `solve`, `category`)
VALUES("安平古堡曾是哪兩個政權的統治中心？", "荷蘭、鄭氏", "西班牙、荷蘭", "荷蘭、清", "鄭氏、清", "荷蘭人於西元1624年，在安平建造了臺灣第一座城堡「熱蘭遮城」，也就是現在的安平古堡，這裡曾是荷蘭人統治的中樞，更是對外貿易的總樞紐西元1661年。鄭成功驅離荷蘭人後，將此地改名為安平，故熱蘭遮城也稱為「王城」或「臺灣城」，俗稱安平古堡，是臺灣最早的一座城池。", 'C');
