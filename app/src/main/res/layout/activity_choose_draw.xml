<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseDraw">

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="211dp"
        android:layout_height="203dp"
        android:layout_marginEnd="120dp"
        android:layout_marginTop="252dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.666"
        app:srcCompat="@drawable/bubble" />

    <Button
        android:id="@+id/choosepic"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_marginBottom="290dp"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="160dp"
        android:background="@color/keyVisionBeige"
        android:text="Go>>"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="425dp"
        android:layout_height="289dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.263"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038"
        app:srcCompat="@drawable/dialog" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="220dp"
        android:layout_height="107dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="72dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="84dp"
        android:gravity="center_horizontal"
        android:text="@string/together_drawing"
        android:textSize="27sp"
        app:layout_constraintBottom_toTopOf="@+id/choosepic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>